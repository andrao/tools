{
    "name": "@andrao/tools",
    "version": "1.1.0",
    "homepage": "https://github.com/andrao/tools#readme",
    "bugs": {
        "url": "https://github.com/andrao/tools/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/andrao/tools.git"
    },
    "license": "MIT",
    "author": "andrao",
    "type": "module",
    "exports": {
        ".": "./dist/index.js",
        "./*": "./dist/*.js"
    },
    "files": [
        "dist",
        "package.json",
        "README.md"
    ],
    "scripts": {
        "build": "rm -rf ./dist && rm -f node_modules/.cache/tsbuildinfo.build.json && tsc -p tsconfig.build.json",
        "format": "pnpm exec prettier --check $PWD",
        "format:fix": "pnpm exec prettier --write .",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "prepack": "pnpm run build",
        "prepare": "husky",
        "test": "vitest run .",
        "typecheck": "tsc --noEmit"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "prettier": "@andrao/prettier",
    "eslintConfig": {
        "extends": "./node_modules/@andrao/eslint/lib/base.js",
        "root": true
    },
    "release": {
        "branches": [
            "main",
            "next",
            {
                "name": "beta",
                "prerelease": true
            },
            {
                "name": "alpha",
                "prerelease": true
            }
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            "@semantic-release/github",
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "CHANGELOG.md",
                        "package.json",
                        "pnpm-lock.yaml"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    },
    "dependencies": {
        "clone": "2.1.2",
        "fast-deep-equal": "3.1.3",
        "javascript-time-ago": "2.5.9"
    },
    "devDependencies": {
        "@andrao/eslint": "^2.2.1",
        "@andrao/prettier": "^1.0.2",
        "@andrao/tsconfig": "^1.0.0",
        "@semantic-release/git": "^10.0.1",
        "@types/clone": "^2.1.4",
        "@types/node": "^20.16.11",
        "commitizen": "^4.3.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.57.1",
        "husky": "^9.1.6",
        "semantic-release": "^24.1.2",
        "typescript": "^5.6.2",
        "vitest": "^2.1.2"
    },
    "packageManager": "pnpm@9.10.0",
    "publishConfig": {
        "access": "public",
        "provenance": true
    }
}
