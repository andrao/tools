{
    "name": "@andrao/tools",
    "version": "1.1.0",
    "homepage": "https://github.com/andrao/tools#readme",
    "bugs": {
        "url": "https://github.com/andrao/tools/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/andrao/tools.git"
    },
    "license": "MIT",
    "author": "andrao",
    "type": "module",
    "exports": {
        ".": "./dist/index.js",
        "./querystring": "./dist/querystring/index.js",
        "./asyncInterval": "./dist/asyncInterval.js",
        "./capitalize": "./dist/capitalize.js",
        "./clone": "./dist/clone.js",
        "./deepEqual": "./dist/deepEqual.js",
        "./index": "./dist/index.js",
        "./isError": "./dist/isError.js",
        "./safe": "./dist/safe.js",
        "./retry": "./dist/retry.js",
        "./timeAgo": "./dist/timeAgo.js",
        "./timeoutPromise": "./dist/timeoutPromise.js",
        "./trim": "./dist/trim.js",
        "./uncapitalize": "./dist/uncapitalize.js",
        "./uriJoin": "./dist/uriJoin.js",
        "./uuid": "./dist/uuid.js"
    },
    "scripts": {
        "build": "rm -rf ./dist && tsc --tsBuildInfoFile ./dist/tsconfig.tsbuildinfo",
        "format": "andrao-prettier --check .",
        "format:fix": "andrao-prettier --write .",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "prepack": "pnpm run build",
        "prepare": "husky",
        "test": "vitest run",
        "test:i": "RUN_JEST_INTEGRATION_TESTS=1 vitest run",
        "test:watch": "vitest watch",
        "typecheck": "tsc --noEmit",
        "vitest": "vitest run"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "prettier": "@andrao/prettier",
    "eslintConfig": {
        "extends": "./node_modules/@andrao/eslint/lib/base.js",
        "root": true
    },
    "release": {
        "branches": [
            "main",
            "next",
            {
                "name": "beta",
                "prerelease": true
            },
            {
                "name": "alpha",
                "prerelease": true
            }
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            "@semantic-release/github",
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "CHANGELOG.md",
                        "package.json",
                        "pnpm-lock.yaml"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    },
    "dependencies": {
        "clone": "2.1.2",
        "fast-deep-equal": "3.1.3",
        "javascript-time-ago": "2.5.9"
    },
    "devDependencies": {
        "@andrao/eslint": "^2.1.0",
        "@andrao/prettier": "^1.0.2",
        "@andrao/tsconfig": "^1.0.0",
        "@semantic-release/git": "^10.0.1",
        "@types/clone": "^2.1.4",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.57.0",
        "husky": "^9.0.11",
        "semantic-release": "^24.1.1",
        "typescript": "^5.6.2",
        "vitest": "^2.1.1"
    },
    "packageManager": "pnpm@9.10.0",
    "publishConfig": {
        "access": "public",
        "provenance": true
    }
}
